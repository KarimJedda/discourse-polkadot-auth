<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in with Polkadot</title>
    <script type="module" nonce="<%= @nonce %>">
        import { web3Accounts, web3Enable, web3FromSource } from 'https://cdn.jsdelivr.net/npm/@polkadot/extension-dapp/+esm';
        import { stringToHex } from 'https://cdn.jsdelivr.net/npm/@polkadot/util/+esm';

        let allAccounts = [];
        let selectedAccount = null;

        async function enableWallet() {
            const btn = document.getElementById('connect-wallet-btn');
            btn.textContent = 'Connecting...';
            btn.disabled = true;

            try {
                const allInjected = await web3Enable('Discourse Polkadot Auth');
                if (!allInjected.length) {
                    alert("No extension found. Please install Polkadot.js extension.");
                    btn.textContent = 'Connect Wallet';
                    btn.disabled = false;
                    return;
                }

                allAccounts = await web3Accounts();
                if (!allAccounts.length) {
                    alert("No accounts found. Please add an account in the extension.");
                    btn.textContent = 'Connect Wallet';
                    btn.disabled = false;
                    return;
                }

                const accountsDropdown = document.getElementById('accounts');
                accountsDropdown.innerHTML = '';
                allAccounts.forEach((account, index) => {
                    const option = document.createElement('option');
                    option.value = account.address;
                    const name = account.meta.name || 'Unnamed';
                    const shortAddr = account.address.slice(0, 6) + '...' + account.address.slice(-4);
                    option.textContent = `${name} (${shortAddr})`;
                    accountsDropdown.appendChild(option);
                });

                document.getElementById('connect-section').style.display = 'none';
                document.getElementById('account-section').style.display = 'block';

                if (allAccounts.length > 0) {
                    accountsDropdown.selectedIndex = 0;
                    selectAccount();
                }
            } catch (error) {
                console.error('Connection error:', error);
                alert(`Connection failed: ${error.message}`);
                btn.textContent = 'Connect Wallet';
                btn.disabled = false;
            }
        }

        function selectAccount() {
            const dropdown = document.getElementById('accounts');
            selectedAccount = allAccounts.find(acc => acc.address === dropdown.value);

            if (selectedAccount) {
                const addr = selectedAccount.address;
                document.getElementById('selected-address').textContent = addr;
                document.getElementById('sign-section').style.display = 'block';
            }
        }

        async function signChallenge() {
            if (!selectedAccount) {
                alert("Please select an account first.");
                return;
            }

            const btn = document.getElementById('sign-btn');
            btn.textContent = 'Waiting for signature...';
            btn.disabled = true;

            const challenge = document.getElementById('challenge').value;

            try {
                const injector = await web3FromSource(selectedAccount.meta.source);
                const signRaw = injector?.signer?.signRaw;

                if (!!signRaw) {
                    const { signature } = await signRaw({
                        address: selectedAccount.address,
                        data: stringToHex(challenge),
                        type: 'bytes'
                    });

                    document.getElementById('signature').value = signature;
                    document.getElementById('address').value = selectedAccount.address;
                    document.getElementById('polkadot-form').submit();
                } else {
                    alert("Signing not available.");
                    btn.textContent = 'Sign in';
                    btn.disabled = false;
                }
            } catch (error) {
                console.error('Signing error:', error);
                alert(`Signing failed: ${error.message}`);
                btn.textContent = 'Sign in';
                btn.disabled = false;
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('connect-wallet-btn').addEventListener('click', enableWallet);
            document.getElementById('accounts').addEventListener('change', selectAccount);
            document.getElementById('sign-btn').addEventListener('click', signChallenge);
        });
    </script>
    <style type="text/css" nonce="<%= @nonce %>">
        @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Roboto Mono', monospace;
            background-color: #fff;
            color: #000;
        }

        .page-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .logo {
            width: 80px;
            height: auto;
            margin-bottom: 2rem;
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 2rem;
            text-align: center;
        }

        .box {
            width: 100%;
            max-width: 380px;
            padding: 2rem;
            border: 2px solid #000;
            box-shadow: 6px 6px 0 #000;
            background: #fff;
        }

        button {
            display: block;
            width: 100%;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            font-family: 'Roboto Mono', monospace;
            font-weight: 700;
            text-align: center;
            color: #000;
            background-color: #fff;
            border: 2px solid #000;
            box-shadow: 4px 4px 0 #000;
            cursor: pointer;
            transition: all 0.15s ease;
        }

        button:hover:not(:disabled) {
            box-shadow: 6px 6px 0 #000;
            transform: translate(-2px, -2px);
        }

        button:active:not(:disabled) {
            box-shadow: 2px 2px 0 #000;
            transform: translate(2px, 2px);
        }

        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        select {
            width: 100%;
            padding: 0.875rem;
            margin-bottom: 1.5rem;
            border: 2px solid #000;
            box-shadow: 4px 4px 0 #000;
            font-family: 'Roboto Mono', monospace;
            font-size: 0.875rem;
            background: #fff;
            cursor: pointer;
        }

        label {
            display: block;
            font-size: 0.875rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .info-text {
            font-size: 0.75rem;
            color: #666;
            margin-top: 1rem;
            text-align: center;
        }

        details {
            margin-top: 1.5rem;
            font-size: 0.75rem;
        }

        summary {
            cursor: pointer;
            color: #666;
            font-size: 0.75rem;
        }

        summary:hover {
            color: #000;
        }

        .technical-info {
            margin-top: 0.75rem;
            padding: 0.75rem;
            background: #f5f5f5;
            border: 1px solid #ddd;
            font-size: 0.625rem;
            word-break: break-all;
            font-family: 'Roboto Mono', monospace;
        }

        .technical-label {
            font-weight: 700;
            margin-bottom: 0.25rem;
            color: #666;
        }

        .technical-value {
            color: #000;
        }

        @media (max-width: 480px) {
            .box {
                padding: 1.5rem;
                box-shadow: 4px 4px 0 #000;
            }

            h1 {
                font-size: 1.25rem;
            }
        }
    </style>
</head>
<body>
    <div class="page-container">
        <svg class="logo" viewBox="0 0 1326.1 1410.3" xmlns="http://www.w3.org/2000/svg">
            <ellipse fill="#000" cx="663" cy="147.9" rx="254.3" ry="147.9"/>
            <ellipse fill="#000" cx="663" cy="1262.3" rx="254.3" ry="147.9"/>
            <ellipse fill="#000" transform="matrix(0.5 -0.866 0.866 0.5 -279.1512 369.5916)" cx="180.5" cy="426.5" rx="254.3" ry="148"/>
            <ellipse fill="#000" transform="matrix(0.5 -0.866 0.866 0.5 -279.1552 1483.9517)" cx="1145.6" cy="983.7" rx="254.3" ry="147.9"/>
            <ellipse fill="#000" transform="matrix(0.866 -0.5 0.5 0.866 -467.6798 222.044)" cx="180.5" cy="983.7" rx="148" ry="254.3"/>
            <ellipse fill="#000" transform="matrix(0.866 -0.5 0.5 0.866 -59.8007 629.9254)" cx="1145.6" cy="426.6" rx="147.9" ry="254.3"/>
        </svg>

        <h1>Sign in with Polkadot</h1>

        <form method="post" id="polkadot-form" noValidate="noValidate">
            <input type="hidden" name="authenticity_token" value="<%= @token %>"/>
            <input type="hidden" name="challenge" id="challenge" value="<%= @challenge %>"/>
            <input type="hidden" name="signature" id="signature" value=""/>
            <input type="hidden" name="address" id="address" value=""/>

            <div class="box">
                <!-- Step 1: Connect Wallet -->
                <div id="connect-section">
                    <button type="button" id="connect-wallet-btn">Connect Wallet</button>
                    <p class="info-text">Requires Polkadot.js extension</p>
                </div>

                <!-- Step 2: Select Account & Sign -->
                <div id="account-section" style="display: none;">
                    <label for="accounts">Select Account</label>
                    <select id="accounts"></select>
                </div>

                <div id="sign-section" style="display: none;">
                    <button type="button" id="sign-btn">Sign in</button>
                    <p class="info-text">Your wallet will prompt you to sign</p>
                </div>

                <!-- Technical details (collapsed) -->
                <details>
                    <summary>Technical details</summary>
                    <div class="technical-info">
                        <div class="technical-label">Challenge</div>
                        <div class="technical-value"><%= @challenge %></div>
                    </div>
                    <div class="technical-info" id="address-details" style="display: none;">
                        <div class="technical-label">Address</div>
                        <div class="technical-value" id="selected-address"></div>
                    </div>
                </details>
            </div>
        </form>
    </div>

    <script nonce="<%= @nonce %>">
        // Show address in technical details when selected
        const addressObserver = new MutationObserver(function() {
            const addr = document.getElementById('selected-address').textContent;
            if (addr) {
                document.getElementById('address-details').style.display = 'block';
            }
        });
        addressObserver.observe(document.getElementById('selected-address'), { childList: true });
    </script>
</body>
</html>
